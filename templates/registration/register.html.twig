{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto mt-10">
        <h1 class="text-2xl font-bold mb-5">Inscription</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}
        <div>
            {{ form_label(registrationForm.email) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-lg p-2'}}) }}
        </div>
        <div>
            {{ form_label(registrationForm.plainPassword, 'Mot de Passe') }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-lg p-2'}}) }}
        </div>
        <div>
            {{ form_label(registrationForm.agreeTerms) }}
            {{ form_widget(registrationForm.agreeTerms, {
                'attr': {'class': 'mt-1 focus:ring-indigo-500 text-indigo-600'}
            }) }}

        </div>

        <p class="text-sm text-gray-500">
            Vous avez deja un compte ? <a href="{{ path('app_login') }}" class="font-medium text-indigo-600 hover:text-indigo-500 underline">Connectez-vous</a>
        </p>

        <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            Register
        </button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}

