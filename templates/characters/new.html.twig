{% extends 'base.html.twig' %}

{% block title %}Ajouter un Nouveau Personnage{% endblock %}

{% block body %}
    <div class="max-w-xl mx-auto px-4 py-8">
        <h1 class="text-2xl font-bold mb-6">Ajouter un Nouveau Personnage</h1>

        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

        {{ form_row(form.name, {
            'attr': {'class': 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500'}
        }) }}

        {{ form_row(form.element, {
            'attr': {'class': 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500'}
        }) }}

        {{ form_row(form.weaponType, {
            'attr': {'class': 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500'}
        }) }}

        {{ form_row(form.rarity, {
            'attr': {'class': 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500'}
        }) }}

        {{ form_row(form.description, {
            'attr': {'class': 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500'}
        }) }}

        {{ form_row(form.photoUrl, {
            'attr': {'class': 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500'}
        }) }}

        <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            Ajouter
        </button>
        {{ form_end(form) }}
    </div>
{% endblock %}
