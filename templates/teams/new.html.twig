{% extends 'base.html.twig' %}

{% block title %}Créer une Nouvelle Équipe{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto sm:px-6 lg:px-8 mt-10">
        <div class="mb-5">
            <h1 class="text-xl font-semibold">Créer une Nouvelle Équipe</h1>
        </div>

        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

        <div>
            {{ form_label(form.name, 'Nom de l\'équipe', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md py-2'}}) }}
        </div>

        <legend class="text-sm font-medium text-gray-700">Sélectionnez au moins 4 personnages</legend>
        <div class="mt-2 space-y-5 grid grid-cols-5">
            {% for character in form.characterId %}
                <div class="flex items-start">
                    {{ form_widget(character, {'attr': {'class': 'h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded'}}) }}
                    {{ form_label(character, null, {'label_attr': {'class': 'ml-3 block text-sm font-medium text-gray-700'}}) }}
                </div>
            {% endfor %}
        </div>

    <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
        Créer l'équipe
    </button>
    </div>
    {{ form_end(form) }}
{% endblock %}
